.loading-container
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	z-index 500
	background radial-gradient(#fff, #aaa)
	animation grain 200ms infinite
	&:after 
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background url('/img/grain.png')
		animation grain 200ms infinite
	.paradox-loading 
		cursor default
		font-family 'Proxima Nova', sans-serif
		font-weight light
		font-size 2.5em
		text-transform uppercase
		letter-spacing 0.2em
	.loading-content 
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		
.loader {
  margin: 6em auto;
  font-size: 5px;
  position: relative;
  text-indent: -9999em;
  border-top: 1.1em solid rgba(50, 50, 50, 0.2);
  border-right: 1.1em solid rgba(50, 50, 50, 0.2);
  border-bottom: 1.1em solid rgba(50, 50, 50, 0.2);
  border-left: 1.1em solid #000;
  -webkit-animation: load8 1.1s infinite linear;
  animation: load8 1.8s infinite linear;
}
.loader,
.loader:after {
  border-radius: 50%;
  width: 10em;
  height: 10em;
}
@-webkit-keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}