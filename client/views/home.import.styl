// Mobile slide-navigation

.mobile-navigation
	position absolute
	bottom 0px
	z-index 25
	button 
		border none
		outline none
	.icon-container
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		.next-label, .previous-label
			text-transform uppercase
			display block
			letter-spacing 0.2em
			font-size 10px
	.next, .previous
		transition all 250ms ease-out
		transform translate3d(0, 0, 0)
	.next 
		display block
		width 50%
		position fixed
		bottom 0px
		left 50%
		height 45px
		background #333
		i 
			color #aaa
	.next-label 
		color #aaa
	.previous
		display block
		width 50%
		position fixed
		bottom 0px
		left 0
		height 45px 
		background #aaa
		i 
			color #333
	+above($mobile)
		display none
.first-slide--active
	.next, .previous
		transition all 250ms ease-out 
		transform translate3d(0, 0, 0)
	.next 
		width 100%
		left 0
	.previous
		left -50%
.last-slide--active 
	.next, .previous
		transform translate3d(0, 0, 0)
	.next
		left 100%
	.previous
		width 100%



// Nav Styles

.slide-navigation
	position absolute
	z-index 20
	top 50%
	left 40px
	transform translateY(-50%)
	+below($mobile)
		display none
	ul 
		list-style none
		padding 0
		li 
			display block
			width 10px
			height 10px
			border 1px solid #fff
			border-radius 100%
			background transparent
			margin 20px 0
			transition all 200ms ease-out
			&.active 
				background #fff
				transition all 200ms ease-out
			&:hover 
				background rgba(255, 255, 255, 0.5)
				transition all 200ms ease-out
		
				
// Mouse icon 
.mouse-icon-container
	position absolute
	bottom 5%
	left 50%
	transform translateX(-50%)
	z-index 10
	+below($mobile)
		display none
	.mouse-icon	
		width 15px
		height 25px
		border 2px solid #fff
		transform translateX(-50%) scale(0.9)
		border-radius 10px
		z-index 10
		position relative
		left 50%
		margin-bottom 5px
	.scroll-wheel
			position absolute
			width 2px 
			height 7px 
			top 5px
			left 50%
			transform translateX(-50%)
			background #fff
.scroll, .to-top
		font-weight 100
		font-size 10px
		letter-spacing 0.3em
		color #fff
		text-transform uppercase
		animation callOut 4000ms infinite
// To Top Button
.to-top-container
	text-align center
	position absolute
	bottom 5%
	left 50%
	transform translateX(-50%)
	z-index 10
	+below($mobile)
		bottom 65px
	.top-icon
		width 40px
		height 10px
		margin 0 auto
		position relative
		.bar 
			display block
			width 50%
			height 1px 
			background white
			&:first-of-type 
				transform rotate(-25deg)
				position absolute
				left 3%
			&:last-of-type
				position absolute
				transform rotate(25deg)
				left 47%
		





section
	height 100%
	width 100%
	position absolute
	top 0
	left 0
	h1
		color #aaa
		font-family 'proxima-nova', sans-serif
		font-weight 100
		letter-spacing 0.4em
		text-transform uppercase
		top 50%
		left 50%
		transform translate3d(-50%, -50%, 0)
		font-size 2em
		position absolute
		line-height 1.5em
		+below($mobile)
			font-size 1.2em

.landing 
	z-index 7
	.landing-left, .landing-right
		width 50%
		position absolute
		top 0
		left 0
		height 100%
		transition transform 1000ms cubic-bezier(.09,.67,.40,.95), opacity 1000ms cubic-bezier(.09,.67,.40,.95)
		opacity 1
		transform translate3d(0, 0, 0)
	.landing-left 
		background url('/img/landing-left.jpg') no-repeat center center
		background-size cover
		float left
		color #1f1f1f
		overflow hidden
		+below($mobile)
			background-position 75%
	.landing-right 
		background url('/img/landing-right.jpg') no-repeat center center
		background-size cover
		left 50%
		color #bbb
		overflow hidden
		+below($mobile)
			background-position 25%
	.landing-title
		cursor default
		font-family 'proxima-nova', sans-serif
		font-weight light
		font-size 2.5em
		text-transform uppercase
		letter-spacing 0.2em
		position absolute
		top 50%
		transform translate(-50%, -50%)
		// filter blur(0)
		// transition all 1800ms ease-out
		&.left 
			left 101.2%
		&.right 
			left 1.2%
		+below($mobile)
			top 70%
			
.landing.hidden
	// .landing-title
	// 	filter blur(10px)
	// 	transition all 1000ms ease-out
	.landing-left, .landing-right
		transition transform 1000ms cubic-bezier(.68,.01,.94,.85), opacity 1000ms cubic-bezier(.68,.01,.94,.85)
		opacity 0
	.landing-left 
		transform translate3d(0, -100%, 0)
	.landing-right
		transform translate3d(0, 100%, 0)		

.section-one
	background #000 radial-gradient(#333, #1f1f1f)
	z-index 5
	h1 
		color #000
		transition all 800ms ease-out
	.image-container
		background url('/img/smoke.jpg')
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		background-size cover
		transform scale(0.8) translate3d(0, 0, 0)
		transition all 800ms ease-out
		&:after 
			content ''
			display block
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background rgba(0, 0, 0, 0.4)
	&.active-slide
		h1
			color #ccc
			transition all 1500ms ease-out
			transition-delay 1000ms
		.image-container
			transform scale(1)
			transition all 1000ms ease-out
			
.section-two
	z-index 5
	transform translate3d(0, 100%, 0)
	transition transform 800ms cubic-bezier(.68,.01,.34,.95)
	.image-container-right
		background url('img/michael.jpg') no-repeat center center
		background-size cover
		position absolute
		width 100%
		height 100%
		top 0
		left 50%
	.image-container-left
		background url('img/maggie.jpg') no-repeat center center
		background-size cover
		position absolute
		width 100%
		height 100%
		top 0
		left -50%
	.image-container-left, .image-container-right
		&:after 
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background rgba(0, 0, 0, 0.4)
	h1 
		color #fff
		opacity 0
		transform translate3d(-50%, -30%, 0)
		transition all 700ms ease-out 
		.part-two
			opacity 0
			transform translate3d(0, 10%, 0)
			transition all 700ms ease-out 
			position relative
	&.active-slide
		transform translate3d(0, 0, 0)
		transition transform 800ms cubic-bezier(.68,.01,.34,.85)
		h1
			opacity 1
			transform translate3d(-50%, -50%, 0)
			perspective 100px
			transition all 700ms ease-out 
			transition-delay 700ms
			.part-two 
				opacity 0.5
				transition all 700ms ease-out 
				transform translate3d(0, 0, 0)
				transition-delay 800ms
	&.previous
		transform translate3d(0, 0, 0)
	
.section-three 
	z-index 5
	background blue
	transform translate3d(0, 0, 0)
	opacity 0
	transition opacity 800ms cubic-bezier(.68,.01,.34,.85)
	.image-container
		background url('/img/eyes.jpg') no-repeat center center
		background-size cover
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		&:after 
			content ''
			position absolute
			width 100%
			height 100%
			top 0
			left 0
			background rgba(0, 0, 0, 0.4)
	h1 
		color #fff
		opacity 0
		transition opacity 1200ms ease-out
	&.active-slide 
		opacity 1
		transition opacity 800ms cubic-bezier(.68,.01,.34,.85)
		h1 
			opacity 1
			transition opacity 1200ms ease-out
			transition-delay 500ms
	&.previous 
		opacity 1
	
	
.section-four
	z-index 5
	background black
	transform translate3d(0, 0, 0)
	opacity 0
	transition all 700ms ease-out
	.image-container
		position absolute
		width 100%
		height 100%
		left 0
		top 0
		background url('/img/park.jpg') no-repeat center center 
		background-size cover
		&:after 
			content ''
			width 100%
			height 100%
			position absolute
			top 0
			left 0
			background #000
			opacity 0.4
	h1 
		width auto
		top 20%
		right 10%
		transform none
		text-align right
		text-shadow 0 0 50px rgba(0, 0, 0, 0.5)
		opacity 0
		transform translate3d(20px, 0, 0)
		transition all 800ms ease-out
	&.active-slide
		transform translate3d(0, 0, 0)
		opacity 1
		transition all 700ms ease-out
		h1 
			opacity 1
			transform translate3d(0, 0, 0)
			transition all 800ms ease-out
	&.previous
		opacity 1
		transform translate3d(0, 0, 0) scale(0.8)
		transition transform 700ms ease-out

