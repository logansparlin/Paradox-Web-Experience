.video-slide
	z-index 5
	background black 
	transform translate3d(0, 0, 0)
	opacity 0
	transition opacity 700ms ease-in
	.video-player
		width 50%
		height 50%
		position absolute 
		top 50%
		left 50%
		transform translate(-50%, -50%)
		z-index 500
		iframe 
			width 100%!important
			height 100%!important
		+below($mobile)
			width 90%
			height 30%
	&.active-slide 
		transition opacity 700ms ease-out
		opacity 1
		z-index 7
	&.next, &.previous
		z-index 6
	